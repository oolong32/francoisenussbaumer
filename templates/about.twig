{# About Template #}
{% extends '_layout' %}

{% block content %}
  {% set entry = craft.entries().section('about').one() %}
  <main id="about">
    
    {% set img = entry.img.one() %}
    {% if img|length %}
    <img src="{{ img.getUrl() }}" alt="{{ currentSite.name  }}, {{ entry.title }}">
    {% endif %}

    <section id="content">

      {{ entry.text }}

    </section>

  </main>

{% include 'includes/footer' %}

{% endblock %}
